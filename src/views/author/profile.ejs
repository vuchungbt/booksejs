<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <h2><i class="fas fa-user-edit me-2"></i> Quản lý hồ sơ tác giả</h2>
</div>

<!-- Profile Form -->
<div class="row">
  <div class="col-lg-8 mx-auto">
    <div class="card border-0 shadow-sm">
      <div class="card-body p-4">
        <form action="/author/profile" method="POST">
          <div class="row mb-4">
            <div class="col-md-4 text-center">
              <img src="<%= author.avatar %>" alt="<%= author.name %>" class="rounded-circle img-thumbnail" width="150" height="150" style="object-fit: cover;">
              <p class="mt-2 mb-0"><small>Avatar hiện tại</small></p>
            </div>
            <div class="col-md-8">
              <h4 class="mb-3">Thông tin cá nhân</h4>
              <p class="text-muted">Thông tin này sẽ được hiển thị công khai trên trang hồ sơ tác giả của bạn</p>
            </div>
          </div>

          <!-- Personal Info -->
          <div class="mb-4">
            <h5 class="border-bottom pb-2">Thông tin cơ bản</h5>
            <div class="row g-3">
              <div class="col-md-6">
                <label for="name" class="form-label">Tên đầy đủ <span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="name" name="name" value="<%= author.name %>" required>
              </div>
              <div class="col-md-6">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" value="<%= author.email %>" disabled>
              </div>
              <div class="col-md-6">
                <label for="phone" class="form-label">Số điện thoại</label>
                <input type="text" class="form-control" id="phone" name="phone" value="<%= author.phone || '' %>">
              </div>
              <div class="col-md-6">
                <label for="address" class="form-label">Địa chỉ</label>
                <input type="text" class="form-control" id="address" name="address" value="<%= author.address || '' %>">
              </div>
            </div>
          </div>

          <!-- Author Profile -->
          <div class="mb-4">
            <h5 class="border-bottom pb-2">Thông tin tác giả</h5>
            <div class="mb-3">
              <label for="bio" class="form-label">Tiểu sử</label>
              <textarea class="form-control" id="bio" name="bio" rows="5" placeholder="Viết một đoạn giới thiệu ngắn về bản thân"><%= author.bio || '' %></textarea>
              <div class="form-text">Viết ngắn gọn về bản thân, kinh nghiệm và các tác phẩm nổi bật của bạn.</div>
            </div>
            <div class="mb-3">
              <label for="education" class="form-label">Học vấn</label>
              <input type="text" class="form-control" id="education" name="education" value="<%= author.education || '' %>" placeholder="Ví dụ: Đại học Văn học TP.HCM, Khóa 2010-2014">
            </div>
            <div class="mb-3">
              <label for="expertise" class="form-label">Chuyên môn</label>
              <input type="text" class="form-control" id="expertise" name="expertise" value="<%= author.expertise ? author.expertise.join(', ') : '' %>" placeholder="Ví dụ: Văn học hiện đại, Tiểu thuyết, Truyện ngắn">
              <div class="form-text">Nhập các chủ đề/thể loại bạn chuyên về, cách nhau bởi dấu phẩy.</div>
            </div>
          </div>

          <!-- Social Media Links -->
          <div class="mb-4">
            <h5 class="border-bottom pb-2">Liên kết mạng xã hội</h5>
            <div class="row g-3">
              <div class="col-md-6">
                <label for="facebook" class="form-label">Facebook</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="fab fa-facebook-f"></i></span>
                  <input type="url" class="form-control" id="facebook" name="facebook" value="<%= author.socialLinks && author.socialLinks.facebook || '' %>" placeholder="https://facebook.com/yourprofile">
                </div>
              </div>
              <div class="col-md-6">
                <label for="twitter" class="form-label">Twitter</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="fab fa-twitter"></i></span>
                  <input type="url" class="form-control" id="twitter" name="twitter" value="<%= author.socialLinks && author.socialLinks.twitter || '' %>" placeholder="https://twitter.com/yourhandle">
                </div>
              </div>
              <div class="col-md-6">
                <label for="instagram" class="form-label">Instagram</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="fab fa-instagram"></i></span>
                  <input type="url" class="form-control" id="instagram" name="instagram" value="<%= author.socialLinks && author.socialLinks.instagram || '' %>" placeholder="https://instagram.com/yourprofile">
                </div>
              </div>
              <div class="col-md-6">
                <label for="website" class="form-label">Website cá nhân</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="fas fa-globe"></i></span>
                  <input type="url" class="form-control" id="website" name="website" value="<%= author.socialLinks && author.socialLinks.website || '' %>" placeholder="https://yourwebsite.com">
                </div>
              </div>
            </div>
          </div>

          <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <button type="submit" class="btn btn-primary">
              <i class="fas fa-save me-1"></i> Lưu thay đổi
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div> 