<!-- Page Header -->
<section class="py-5 bg-light">
  <div class="container">
    <h1 class="display-5 fw-bold">Danh sách tác giả</h1>
    <p class="lead">Tìm hiểu về các tác giả và tác phẩm của họ</p>
  </div>
</section>

<!-- Authors List Section -->
<section class="py-5">
  <div class="container">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
      <% authors.forEach(function(author) { %>
        <div class="col">
          <div class="card h-100 author-card border-0 shadow-sm">
            <div class="text-center pt-4">
              <img src="<%= author.avatar %>" class="rounded-circle author-avatar" alt="<%= author.name %>" width="120" height="120">
            </div>
            <div class="card-body text-center">
              <h5 class="card-title"><%= author.name %></h5>
              <p class="card-text text-muted">
                <% if (author.bio) { %>
                  <%= author.bio.length > 100 ? author.bio.substring(0, 100) + '...' : author.bio %>
                <% } else { %>
                  Tác giả chưa cập nhật thông tin giới thiệu.
                <% } %>
              </p>
              <div class="mt-3">
                <a href="/authors/<%= author._id %>" class="btn btn-outline-primary btn-sm">Xem hồ sơ</a>
                <a href="/authors/<%= author._id %>/introduction" class="btn btn-outline-secondary btn-sm">Giới thiệu</a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</section>

<style>
  .author-avatar {
    object-fit: cover;
    border: 4px solid #fff;
    box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
  }
  .author-card:hover {
    transform: translateY(-5px);
    transition: transform 0.3s ease;
  }
</style> 