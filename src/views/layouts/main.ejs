<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- Title and basic meta -->
  <title><%= title %><%= settings ? ' - ' + settings.siteName : ' - Nhà Sách Online' %></title>
  <meta name="description" content="<%= typeof metaDescription !== 'undefined' ? metaDescription : (settings ? settings.siteDescription : 'Nhà sách trực tuyến với các đầu sách chất lượng') %>">
  
  <!-- Favicon -->
  <link rel="shortcut icon" href="<%= settings && settings.faviconPath ? settings.faviconPath : '/images/books/favicon.ico' %>" type="image/x-icon">
  
  <!-- SEO Meta Tags -->
  <% if (typeof canonicalUrl !== 'undefined') { %>
  <link rel="canonical" href="<%= canonicalUrl %>">
  <% } %>
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="<%= typeof ogType !== 'undefined' ? ogType : 'website' %>">
  <meta property="og:url" content="<%= typeof canonicalUrl !== 'undefined' ? canonicalUrl : 'https://nhasachonline.com' %>">
  <meta property="og:title" content="<%= typeof ogTitle !== 'undefined' ? ogTitle : title %>">
  <meta property="og:description" content="<%= typeof ogDescription !== 'undefined' ? ogDescription : (typeof metaDescription !== 'undefined' ? metaDescription : (settings ? settings.siteDescription : 'Nhà sách trực tuyến với các đầu sách chất lượng')) %>">
  <meta property="og:image" content="<%= typeof ogImage !== 'undefined' ? ogImage : 'https://nhasachonline.com/images/og-default.jpg' %>">
  
  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:url" content="<%= typeof canonicalUrl !== 'undefined' ? canonicalUrl : 'https://nhasachonline.com' %>">
  <meta property="twitter:title" content="<%= typeof twitterTitle !== 'undefined' ? twitterTitle : title %>">
  <meta property="twitter:description" content="<%= typeof twitterDescription !== 'undefined' ? twitterDescription : (typeof metaDescription !== 'undefined' ? metaDescription : (settings ? settings.siteDescription : 'Nhà sách trực tuyến với các đầu sách chất lượng')) %>">
  <meta property="twitter:image" content="<%= typeof twitterImage !== 'undefined' ? twitterImage : 'https://nhasachonline.com/images/og-default.jpg' %>">
  
  <!-- Additional meta tags -->
  <% if (typeof additionalMeta !== 'undefined') { %>
    <%- additionalMeta %>
  <% } %>
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <!-- Header -->
  <%- include('../partials/navbar') %>

  <!-- Flash Messages -->
  <%- include('../partials/messages') %>

  <!-- Main Content -->
  <main class="container py-4">
    <%- body %>
  </main>

  <!-- Footer -->
  <%- include('../partials/footer') %>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <!-- Custom JS -->
  <script src="/js/main.js"></script>
</body>
</html>